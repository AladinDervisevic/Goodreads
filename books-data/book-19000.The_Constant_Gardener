        $('bookCover_58768200').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_58768200').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
