<div id="review_352416017" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/352416017" />
    <a title="☮Karen" class="left imgcol" href="/user/show/1076079-karen"><img alt="☮Karen" src="https://images.gr-assets.com/users/1643848766p2/1076079.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/352416017?book_show_action=true">Jun 21, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="☮Karen" class="user" itemprop="url" name="☮Karen" href="/user/show/1076079-karen">☮Karen</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1076079-karen?shelf=audio">audio</a>, 
              <a class="actionLinkLite" href="/review/list/1076079-karen?shelf=read-in-2019">read-in-2019</a>, 
              <a class="actionLinkLite" href="/review/list/1076079-karen?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/1076079-karen?shelf=hoopla">hoopla</a>, 
              <a class="actionLinkLite" href="/review/list/1076079-karen?shelf=hear-hear-on-bt">hear-hear-on-bt</a>
