      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_531'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/13591672-rootless?rating=\">all <span class=\"greyText\">(5194)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/13591672-rootless?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;EurW55G1E9nkg2oKI2EwNgkYdDOyLroq7A7FE+3c+ddPteBaQ/FVkraugS0w0oQcHNHCMtiXxmxBqFPYLhJCIw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(236)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/13591672-rootless?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;vcuPc3dn9B49nlX0NUWMJsL/ZD+gJv2gEJUzrY1otubglLnOpSOyVW+zvtMm9jgM1zbSPsqfgea9M6VmTqYNEg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(363)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"load