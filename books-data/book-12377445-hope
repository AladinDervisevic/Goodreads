        $('bookCover_30633500').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_30633500').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
