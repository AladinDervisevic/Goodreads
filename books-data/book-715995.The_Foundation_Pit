<div id="review_773521550" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/773521550" />
    <a title="Jeremy" class="left imgcol" href="/user/show/18701990-jeremy"><img alt="Jeremy" src="https://images.gr-assets.com/users/1395455966p2/18701990.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/773521550?book_show_action=true">Mar 07, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Jeremy" class="user" itemprop="url" name="Jeremy" href="/user/show/18701990-jeremy">Jeremy</a>
