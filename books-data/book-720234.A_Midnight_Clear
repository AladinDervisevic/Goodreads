        $('bookCover_116114').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_116114').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
