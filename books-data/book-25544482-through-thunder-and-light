        $('bookCover_51024737').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_51024737').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
