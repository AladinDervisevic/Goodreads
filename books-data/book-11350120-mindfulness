      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_11281104').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_11281104').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_11281104').observe('prototip:hidden', function () {
