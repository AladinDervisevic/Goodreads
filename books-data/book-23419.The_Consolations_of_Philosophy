      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_35049677').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_35049677').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_35049677').observe('prototip:hidden', function () {
