      var newTip = new Tip($('rating_details_tip'), "\n        <div id=\"moreBookData\" class=\"bookMeta\" >\n  \n\n  \n\n<table border=\"0\" id=\"rating_distribution\" style=\"width: auto; max-width: 500px;\" cellspacing=\"5\" cellpadding=\"0\">\n      <tr>\n        <th width=\"25\" class=\"right\">5&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 100%;\" title=\"136 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/18193684-the-fig-orchard?rating=5\', {asynchronous:true, evalScripts:true, method:\'get\', parameters:\'authenticity_token=\' + encodeURIComponent(\'wobkVGkotdO/2hpLgQGDPrp1ketVld9YhcwwKK5ZjT1p+2MJrln1oNA1xKgtYSmnaVrzysxVMTSjVAf1ZJqqZg==\')})\" data-remote=\"true\">&nbsp;<\/a>\n        <\/td>\n        <td width=\"90\">\n          41% (136)\n        <\/td>\n      <\/tr>\n      <tr>\n        <th width=\"25\" class=\"right\">4&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 86%;\" title=\"118 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/18193684-the-fig-orchard?rating=4\', {asynchronous:true, evalScripts:true, method:\'get\', parameters:\'authenticity_token=\' + encodeURIComponent(\'bSDe2T8mx2MueGNsTKJQ9l7NBBiwatNotWeO4fVfkXXGXVmE+FeHEEGXvY/gwvpvjeJmOSmqPQST/7k8P5y2Lg==\')})\" data-remote=\"true\">&nbsp;<\/a>\n        <\/td>\n        <td width=\"90\">\n          35% (118)\n        <\/td>\n      <\/tr>\n      <tr>\n        <th width=\"25\" class=\"right\">3&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 47%;\" title=\"64 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/18193684-the-fig-orchard?rating=3\', {as