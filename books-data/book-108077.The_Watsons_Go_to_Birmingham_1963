<div id="review_2026873961" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2026873961" />
    <a title="Eileen" class="left imgcol" href="/user/show/28117212-eileen"><img alt="Eileen" src="https://images.gr-assets.com/users/1483503975p2/28117212.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2026873961?book_show_action=true">Jun 13, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Eileen" class="user" itemprop="url" name="Eileen" href="/user/show/28117212-eileen">Eileen</a>
