        $('bookCover_6697910').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6697910').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
