      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_23363065').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_23363065').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_23363065').observe('prototip:hidden', function () {
