<div id="review_1337071036" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1337071036" />
    <a title="Paula" class="left imgcol" href="/user/show/16174645-paula"><img alt="Paula" src="https://images.gr-assets.com/users/1632583536p2/16174645.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1337071036?book_show_action=true">Jul 16, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Paula" class="user" itemprop="url" name="Paula" href="/user/show/16174645-paula">Paula</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=crime">crime</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=best-prose">best-prose</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=mystery">mystery</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=agatha-award">agatha-award</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=award-winner">award-winner</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=series">series</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=favorite-authors">favorite-authors</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=read-in-2015">read-in-2015</a>, 
              <a class="actionLinkLite" href="/review/list/16174645-paula?shelf=audio-book">audio-book</a>
