      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_34379770').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_34379770').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_34379770').observe('prototip:hidden', function () {
