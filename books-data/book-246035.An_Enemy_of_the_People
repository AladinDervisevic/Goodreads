        $('bookCover_6348891').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6348891').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
