        $('bookCover_13596166').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_13596166').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
