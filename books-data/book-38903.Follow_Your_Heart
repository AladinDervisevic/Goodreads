<div id="review_576262262" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/576262262" />
    <a title="heidi" class="left imgcol" href="/user/show/8320288-heidi"><img alt="heidi" src="https://images.gr-assets.com/users/1546762967p2/8320288.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/576262262?book_show_action=true">Mar 30, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="heidi" class="user" itemprop="url" name="heidi" href="/user/show/8320288-heidi">heidi</a>
