      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Britany" class="user" itemprop="url" name="Britany" href="/user/show/5550397-britany">Britany</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/5550397-britany?shelf=world-war-ii">world-war-ii</a>, 
              <a class="actionLinkLite" href="/review/list/5550397-britany?shelf=people-mag-rec">people-mag-rec</a>, 
              <a class="actionLinkLite" href="/review/list/5550397-britany?shelf=historical-fiction">historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/5550397-britany?shelf=2021">2021</a>, 
              <a class="actionLinkLite" href="/review/list/5550397-britany?shelf=mmd">mmd</a>
