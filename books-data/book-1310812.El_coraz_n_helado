        $('edition_9682371').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_9682371').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_9682371').observe('prototip:hidden', function () {
