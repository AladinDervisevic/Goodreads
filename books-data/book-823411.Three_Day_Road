<div id="review_30136851" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/30136851" />
    <a title="Bonnie" class="left imgcol" href="/user/show/1424859-bonnie"><img alt="Bonnie" src="https://images.gr-assets.com/users/1229215019p2/1424859.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/30136851?book_show_action=true">Aug 14, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Bonnie" class="user" itemprop="url" name="Bonnie" href="/user/show/1424859-bonnie">Bonnie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1424859-bonnie?shelf=historical-fiction">historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/1424859-bonnie?shelf=canadian-author">canadian-author</a>, 
              <a class="actionLinkLite" href="/review/list/1424859-bonnie?shelf=reviewed-books">reviewed-books</a>, 
              <a class="actionLinkLite" href="/review/list/1424859-bonnie?shelf=recommended">recommended</a>
          </div>
