        $('bookCover_24915').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_24915').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_24915').observe('prototip:hidden', function () {
