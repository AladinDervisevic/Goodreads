        $('bookCover_1954247').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1954247').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
