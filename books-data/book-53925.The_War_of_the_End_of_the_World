      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_12495285').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_12495285').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_12495285').observe('prototip:hidden', function () {
