      var newTip = new Tip($('rating_details_tip'), "\n        <div id=\"moreBookData\" class=\"bookMeta\" >\n  \n\n  \n\n<table border=\"0\" id=\"rating_distribution\" style=\"width: auto; max-width: 500px;\" cellspacing=\"5\" cellpadding=\"0\">\n      <tr>\n        <th width=\"25\" class=\"right\">5&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 100%;\" title=\"35 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/22919146-the-soul-and-the-seed?rating=5\', {asynchronous:true, evalScripts:true, method:\'get\', parameters:\'authenticity_token=\' + encodeURIComponent(\'uUCwFOepsUS4HJ/c7OPi5BDjmD43it6RCP33RMtk5W3kX0/xATzZTQGCYBE/mXEeLWhsmRWTa8shgvn2yXWtdA==\')})\" data-remote=\"true\">&nbsp;<\/a>\n        <\/td>\n        <td width=\"90\">\n          53% (35)\n        <\/td>\n      <\/tr>\n      <tr>\n        <th width=\"25\" class=\"right\">4&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 51%;\" title=\"18 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/22919146-the-soul-and-the-seed?rating=4\', {asynchronous:true, evalScripts:true, method:\'get\', parameters:\'authenticity_token=\' + encodeURIComponent(\'MTxoFflWG4Zb5QvERLyfpR5hpA45+76F2ezotKk5QU9sI5fwH8Nzj+J79AmXxgxfI+pQqRviC9/wk+YGqygJVg==\')})\" data-remote=\"true\">&nbsp;<\/a>\n        <\/td>\n        <td width=\"90\">\n          27% (18)\n        <\/td>\n      <\/tr>\n      <tr>\n        <th width=\"25\" class=\"right\">3&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 17%;\" title=\"6 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/22919146-the-soul-and-the-seed?ra