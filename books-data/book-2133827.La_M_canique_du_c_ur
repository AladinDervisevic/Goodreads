        $('bookCover_58355630').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_58355630').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
