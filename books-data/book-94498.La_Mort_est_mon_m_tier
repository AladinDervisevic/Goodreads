        $('bookCover_6710247').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6710247').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
