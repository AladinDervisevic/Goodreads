      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_279" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_279'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/21913812-this-changes-everything?rating=\">all <span class=\"greyText\">(115562)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/21913812-this-changes-everything?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;GA7lLR5bcVzWXiG7b1zq2KRaPuYeps5tMb4EP0TDvbQpklUtVzaRfhhXUSDeeDrI3VGh+0cFbDkN+IKsszWQxw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(10180)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/21913812-this-changes-everything?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;QgQD5W+qK56UybVm/AZR+uzdtvivXBZSPQ0X8hdaB3VzmLPlJsfLvFrAxf1NIoHqldYp5fb/tAYBS5Fh4KwqBg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(8069)<\/span><\/a>\n                  <span class=\"loadingAnimatio