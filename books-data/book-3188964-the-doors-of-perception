          $$('div.prototip').each(function (e) {
            if ($('edition_44306739').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_44306739').observe('prototip:hidden', function () {
