        $('bookCover_31929880').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_31929880').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
