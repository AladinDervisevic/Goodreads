        $('bookCover_35069201').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_35069201').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
