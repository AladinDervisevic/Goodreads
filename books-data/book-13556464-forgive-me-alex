  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/258901488?book_show_action=true">Jan 09, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Traveler One" class="user" itemprop="url" name="Traveler One" href="/user/show/7378094-traveler-one">Traveler One</a>
