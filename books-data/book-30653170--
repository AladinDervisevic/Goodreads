        $('bookCover_1220507').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1220507').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
