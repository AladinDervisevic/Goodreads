  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/652788528?book_show_action=true">Jun 27, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Nancy" class="user" itemprop="url" name="Nancy" href="/user/show/745343-nancy">Nancy</a>
