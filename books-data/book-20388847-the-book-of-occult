        $('bookCover_23792').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_23792').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
