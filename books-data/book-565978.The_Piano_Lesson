  <div class="friendReviews elementListBrown" >
    <div class="section">
      

<div id="review_3760561804" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3760561804" />
    <a title="Alina" class="left imgcol" href="/user/show/40582060-alina"><img alt="Alina" src="https://images.gr-assets.com/users/1507493488p2/40582060.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3760561804?book_show_action=true">Mar 17, 2021</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Alina" class="user" itemprop="url" name="Alina" href="/user/show/40582060-alina">Alina</a>
