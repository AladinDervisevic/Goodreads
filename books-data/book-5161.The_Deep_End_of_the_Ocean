<div id="review_661800080" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/661800080" />
    <a title="Natasha Findlay" class="left imgcol" href="/user/show/17189806-natasha-findlay"><img alt="Natasha Findlay" src="https://images.gr-assets.com/users/1375357313p2/17189806.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/661800080?book_show_action=true">Jul 08, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Natasha Findlay" class="user" itemprop="url" name="Natasha Findlay" href="/user/show/17189806-natasha-findlay">Natasha Findlay</a>
