<script type="text/javascript" charset="utf-8">
//<![CDATA[
  var timer_338953_end_at = 1774945 + new Date().getTime()/1000;

  function timer_338953_updateTimer() {
    var time_left = "";
    var secs_left = timer_338953_end_at - new Date().getTime()/1000;

    if(secs_left <= 0) {
      document.getElementById("timer_338953").innerHTML = "closed";
      clearInterval(timer_338953_updater);
      return;
    }

    var minutes_left = secs_left / 60;
    var hours_left = minutes_left / 60;
    var days_left = Math.floor(hours_left / 24);

    if(days_left > 0) {
      if(false){
        time_left += days_left + ":";
      }else{
        time_left += days_left + " days and ";
      }
    }
    if(false){
      time_left += Math.floor(hours_left%24/10)
      time_left += Math.floor(hours_left%24)%10 + ":";
    }else{
      time_left += Math.floor(hours_left%24) + ":";
    }
    time_left += Math.floor(minutes_left%60/10);
    time_left += Math.floor(minutes_left%10) + ":";
    time_left += Math.floor(secs_left%60/10);
    time_left += Math.floor(secs_left%10);

    document.getElementById("timer_338953").innerHTML = time_left;
  }

  timer_338953_updateTimer();
  var timer_338953_updater = setInterval(timer_338953_updateTimer, 100);
//]]>
</script>
