        $('bookCover_89322').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_89322').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
