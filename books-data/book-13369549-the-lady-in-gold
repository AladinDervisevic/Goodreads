      var newTip = new Tip($('edition_25943023'), "<div class=\'editionTitle\'>\nLa Dama de Oro: La historia extraordinaria del Retrato de Adele Bloch-Bauer obra maestra de Gustav Klimt (Paperback) \n<\/div>\n<div class=\'editionInfo\'>\n<\/div>\n<div class=\'editionInfo\'>\n<\/div>\n<div class=\'editionInfo\'>\n<\/div>\n<div class=\'editionInfo\'>\nformat: Paperback\n<\/div>\n<div class=\'editionInfo\'>\nPublished\nMay 2015\nby Vaso Roto Ediciones \n<\/div>\n<div class=\'enlargeCover\' id=\'edition_25943023_enlarge\'>\n<a>\nEnlarge cover\n<\/a>\n<\/div>\n<div class=\'editionCover\' id=\'edition_25943023_enlarge_cover\' style=\'display: none;\'>\n<img src=\"https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1642442566l/25943023.jpg\" alt=\"25943023\" />\n<\/div>\n<div class=\'editionAction\'>\n<div class=\'wtrButtonContainer wtrSignedOut\' id=\'7_book_25943023\'>\n<div class=\'wtrUp wtrLeft\'>\n<form action=\"/shelf/add_to_shelf\" accept-charset=\"UTF-8\" method=\"post\"><input name=\"utf8\" type=\"hidden\" value=\"&#x2713;\" /><input type=\"hidden\" name=\"authenticity_token\" value=\"TZRgFyLU8PqWdhcmmWDouSUPBhc70XffUZNTJQgbhAtW67b1qWRgmxMqGhXIxHFLCTV1wtTzr75EbI83VVrJWQ==\" />\n<input type=\"hidden\" name=\"book_id\" id=\"book_id\" value=\"25943023\" />\n<input type=\"hidden\" name=\"name\" id=\"name\" value=\"to-read\" />\n<input type=\"hidden\" name=\"unique_id\" id=\"unique_id\" value=\"7_book_25943023\" />\n<input type=\"hidden\" name=\"wtr_new\" id=\"wtr_new\" value=\"true\" />\n<input type=\"hidden\" name=\"from_choice\" id=\"from_choice\" value=\"false\" />\n<input type=\"hidden\" name=\"from_home_module\" id=\"from_home_module\" value=\"false\" />\n<input type=\"hidden\" name=\"ref\" id=\"ref\" value=\"\" class=\"wtrLeftUpRef\" />\n<input type=\"hidden\" name=\"existing_review\" id=\"existing_review\" value=\"false\" class=\"wtrExisting\" />\n<input type=\"hidden\" name=\"page_url\" id=\"page_url\" />\n<button class=\'wtrToRead\' type=\'s