        $('bookCover_13170523').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_13170523').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_13170523').observe('prototip:hidden', function () {
