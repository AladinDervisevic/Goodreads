        $('bookCover_1413941').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1413941').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
