        $('bookCover_52222570').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_52222570').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
