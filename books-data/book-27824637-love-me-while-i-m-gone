<div id="review_1453866155" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1453866155" />
    <a title="Rayene Ziadi" class="left imgcol" href="/user/show/28004500-rayene-ziadi"><img alt="Rayene Ziadi" src="https://images.gr-assets.com/users/1482689962p2/28004500.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1453866155?book_show_action=true">Nov 28, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rayene Ziadi" class="user" itemprop="url" name="Rayene Ziadi" href="/user/show/28004500-rayene-ziadi">Rayene Ziadi</a>
