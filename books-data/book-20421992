            if ($('bookCover_7704143').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_7704143').observe('prototip:hidden', function () {
