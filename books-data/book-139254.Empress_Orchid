        $('bookCover_25577005').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_25577005').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
