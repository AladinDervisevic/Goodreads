<div id="review_747143223" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/747143223" />
    <a title="Tarang Sinha" class="left imgcol" href="/user/show/21838661-tarang-sinha"><img alt="Tarang Sinha" src="https://images.gr-assets.com/users/1479503713p2/21838661.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/747143223?book_show_action=true">Oct 22, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Tarang Sinha" class="user" itemprop="url" name="Tarang Sinha" href="/user/show/21838661-tarang-sinha">Tarang Sinha</a>
