      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_18592295').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_18592295').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_18592295').observe('prototip:hidden', function () {
