<div id="review_1301137776" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1301137776" />
    <a title="Anas Elbaye" class="left imgcol" href="/user/show/15237875-anas-elbaye"><img alt="Anas Elbaye" src="https://images.gr-assets.com/users/1588762617p2/15237875.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1301137776?book_show_action=true">Jun 07, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Anas Elbaye" class="user" itemprop="url" name="Anas Elbaye" href="/user/show/15237875-anas-elbaye">Anas Elbaye</a>
      </span>

