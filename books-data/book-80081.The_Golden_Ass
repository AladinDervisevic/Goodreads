<div id="review_506262795" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/506262795" />
    <a title="Mala" class="left imgcol" href="/user/show/5960716-mala"><img alt="Mala" src="https://images.gr-assets.com/users/1435586901p2/5960716.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/506262795?book_show_action=true">Jan 14, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Mala" class="user" itemprop="url" name="Mala" href="/user/show/5960716-mala">Mala</a>
