      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_942'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/109487.Blood_and_Thunder?rating=\">all <span class=\"greyText\">(33653)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/109487.Blood_and_Thunder?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;Qpcc8BFOOAuFLRN/2lflm9oMBYTXXw5GABAv2Lj2LY8iQ5adBCGDeRy+t7ijS6Ih4r7OhI8ADQhC9AEmr69ImA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(6349)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/109487.Blood_and_Thunder?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;5c2beyXNR/fklI4aCF98zvjo6PX/8dsNJc3r+nm9/LmFGREWMKL8hX0HKt1xQzt0wFoj9aeu2ENnKcUEbuSZrg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(5090)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n            