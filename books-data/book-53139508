        $('bookCover_50423070').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_50423070').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
