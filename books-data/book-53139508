        $('bookCover_57009433').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_57009433').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_57009433').observe('prototip:hidden', function () {
