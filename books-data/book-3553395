        $('bookCover_3437465').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_3437465').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
