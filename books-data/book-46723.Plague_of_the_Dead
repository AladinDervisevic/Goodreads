        $('bookCover_2574748').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_2574748').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
