<div id="review_461064629" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/461064629" />
    <a title="Travis" class="left imgcol" href="/user/show/14807341-travis"><img alt="Travis" src="https://s.gr-assets.com/assets/nophoto/user/m_50x66-82093808bca726cb3249a493fbd3bd0f.png" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/461064629?book_show_action=true">Nov 21, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Travis" class="user" itemprop="url" name="Travis" href="/user/show/14807341-travis">Travis</a>
