        $('bookCover_32446').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_32446').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
