      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_215'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/6181.If_This_Is_a_Man_The_Truce?rating=\">all <span class=\"greyText\">(43255)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/6181.If_This_Is_a_Man_The_Truce?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;tJOJKSszuvulQIiry76XqlMi1UwSl1nquEuMf4d+hLt4u+5WSrS53DOSk+Wju6OQCtK7O35boFVZ0MjB01VCFA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(11233)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/6181.If_This_Is_a_Man_The_Truce?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;BZNWknRMWmx0eoYHIHO2S+Php/Sx0M+lpvLV4Tc0/x/JuzHtFctZS+KonUlIdoJxuhHJg90cNhpHaZFfYx85sA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4614)<\/span><\/a>\n                  <span class=\"loadingAnimation\">