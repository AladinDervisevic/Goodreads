<div id="review_2256764633" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2256764633" />
    <a title="*TANYA*" class="left imgcol" href="/user/show/29049556-tanya"><img alt="*TANYA*" src="https://images.gr-assets.com/users/1483240718p2/29049556.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2256764633?book_show_action=true">Jan 14, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="*TANYA*" class="user" itemprop="url" name="*TANYA*" href="/user/show/29049556-tanya">*TANYA*</a>
