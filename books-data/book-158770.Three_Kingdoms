        $('edition_42634134').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_42634134').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
