        $('bookCover_13638804').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_13638804').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
