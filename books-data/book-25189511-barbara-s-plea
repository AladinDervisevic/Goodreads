        $('bookCover_54635060').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_54635060').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
