          $$('div.prototip').each(function (e) {
            if ($('bookCover_51901147').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_51901147').observe('prototip:hidden', function () {
