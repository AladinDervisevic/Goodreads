          $$('div.prototip').each(function (e) {
            if ($('edition_18888848').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_18888848').observe('prototip:hidden', function () {
