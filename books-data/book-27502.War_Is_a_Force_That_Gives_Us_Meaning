      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_130'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/27502.War_Is_a_Force_That_Gives_Us_Meaning?rating=\">all <span class=\"greyText\">(14307)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/27502.War_Is_a_Force_That_Gives_Us_Meaning?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;PiNNVsmhdSMu6HeCoA5pDoRhW+cr38rVgZYIQuckNhLEIMYHPrzRI9JvJ5y15Ak1BTpyorfJuJvKvBBMdOIZLQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(2489)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/27502.War_Is_a_Force_That_Gives_Us_Meaning?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;GvKf1tGbT3pHB4zBur1rofUBL8o9ZtKED7NMXCQ0Dmbg8RSHJobreruA3N+vVwuadFoGj6FwoMpEmVRSt/IhWQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(2074)<\/span><\/a>\n                  <