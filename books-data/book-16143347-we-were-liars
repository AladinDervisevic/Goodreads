<div id="review_760947802" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/760947802" />
    <a title="Kierra" class="left imgcol" href="/user/show/11127195-kierra"><img alt="Kierra" src="https://images.gr-assets.com/users/1371412385p2/11127195.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/760947802?book_show_action=true">Nov 09, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Kierra" class="user" itemprop="url" name="Kierra" href="/user/show/11127195-kierra">Kierra</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

