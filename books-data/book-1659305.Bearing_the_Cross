        $('bookCover_160943').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_160943').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
