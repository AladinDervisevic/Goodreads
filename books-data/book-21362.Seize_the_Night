        $('bookCover_32453').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_32453').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
