      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_18460043').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_18460043').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_18460043').observe('prototip:hidden', function () {
