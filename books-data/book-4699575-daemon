        $('bookCover_9763010').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_9763010').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_9763010').observe('prototip:hidden', function () {
