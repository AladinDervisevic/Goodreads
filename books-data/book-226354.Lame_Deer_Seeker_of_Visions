      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_226357').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_226357').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_226357').observe('prototip:hidden', function () {
