      var newTip = new Tip($('rating_details_tip'), "\n        <div id=\"moreBookData\" class=\"bookMeta\" >\n  \n\n  \n\n<table border=\"0\" id=\"rating_distribution\" style=\"width: auto; max-width: 500px;\" cellspacing=\"5\" cellpadding=\"0\">\n      <tr>\n        <th width=\"25\" class=\"right\">5&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 100%;\" title=\"13 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/26153320-mantle?rating=5\', {asynchronous:true, evalScripts:true, method:\'get\', parameters:\'authenticity_token=\' + encodeURIComponent(\'ZlmP3M8c4vo67oiNE1cJQ9ijuETr5iQHe/FGHM/l3AiGPMfy8RTDxhoqfBigoww5+3MgZBbJDmATK0tSbjFb+w==\')})\" data-remote=\"true\">&nbsp;<\/a>\n        <\/td>\n        <td width=\"90\">\n          39% (13)\n        <\/td>\n      <\/tr>\n      <tr>\n        <th width=\"25\" class=\"right\">4&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 100%;\" title=\"13 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/26153320-mantle?rating=4\', {asynchronous:true, evalScripts:true, method:\'get\', parameters:\'authenticity_token=\' + encodeURIComponent(\'7QTtfikkXkQvShhSLYvqjmonYuZfLYjTg4VZHvUzdS8NYaVQFyx/eA+O7Meef+/0Sff6xqICorTrX1RQVOfy3A==\')})\" data-remote=\"true\">&nbsp;<\/a>\n        <\/td>\n        <td width=\"90\">\n          39% (13)\n        <\/td>\n      <\/tr>\n      <tr>\n        <th width=\"25\" class=\"right\">3&nbsp;<a size=\"12x12\" class=\"staticStar p10\" style=\"float: right;\"><\/a><\/th>\n        <td width=\"350\">\n          <a style=\"display: block; background-color: #215625; width: 23%;\" title=\"3 ratings\" href=\"#\" onclick=\"new Ajax.Request(\'/book/reviews/26153320-mantle?rating=3\', {asynchronous:true, evalScripts:tr