        $('bookCover_9753375').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_9753375').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
