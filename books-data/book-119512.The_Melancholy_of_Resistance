      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_542'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/119512.The_Melancholy_of_Resistance?rating=\">all <span class=\"greyText\">(17698)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/119512.The_Melancholy_of_Resistance?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;HxPY+1QJp7ZE+qUOoMV9yi1d+010RihukodTxkHwgF6BQq3cyqGrnmcgFrfPYuaENs78g3tdcYWLdTCK+TTEuw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(1518)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/119512.The_Melancholy_of_Resistance?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;o0VyJsAH6TX7P5VstusMSRYQ4C0713VH0o379vQLznM9FAcBXq/lHdjlJtXZTJcHDYPn4zTMLKzLf5i6TM+Klg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(1165)<\/span><\/a>\n                  <span class=\"loadingA