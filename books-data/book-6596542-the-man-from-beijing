      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_263'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/6596542-the-man-from-beijing?rating=\">all <span class=\"greyText\">(24268)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/6596542-the-man-from-beijing?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;cPnB03K1Lbsqg4UC9dt0W73Hr5I7NriuDPAeFmtdQOIncGGmE3CpaKJyhFqefj/WbaqxPOYmfuofxTxw2Z3aow==&#39;)}); return false;\">5 stars <span class=\"greyText\">(2959)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/6596542-the-man-from-beijing?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;sz+O7JWnHOuu3nHuRGZFmmbkrw7RPKZvyFXfaNflcW3kti6Z9GKYOCYvcLYvww4XtomxoAwsYCvbYP0OZSXrLA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(5608)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n