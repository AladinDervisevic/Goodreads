        $('bookCover_183711').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_183711').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
