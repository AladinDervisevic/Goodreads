  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/732165577?book_show_action=true">Oct 01, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Angela M" class="user" itemprop="url" name="Angela M" href="/user/show/4685500-angela-m">Angela M</a>
