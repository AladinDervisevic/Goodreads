      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_214'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/24830.The_Illustrated_Man?rating=\">all <span class=\"greyText\">(172790)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/24830.The_Illustrated_Man?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;a4SuMzSVCCq2N4B/wpow3SPZSgYg3TeBGuWjydTNJIjZ8v3PvfjqLSnhDajSNJcR6VQH4sry1OrLnCBRPEQecw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(34539)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/24830.The_Illustrated_Man?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;u1UFwct+kh9IExm8y693LoI8WCh2jbDNdfa8j1nbc9cJI1Y9QhNwGNfFlGvbAdDiSLEVzJyiU6akjz8XsVJJLA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(33971)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n      