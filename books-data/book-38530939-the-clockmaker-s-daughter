  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2393445127?book_show_action=true">Jun 01, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Tammy" class="user" itemprop="url" name="Tammy" href="/user/show/50603889-tammy">Tammy</a>
