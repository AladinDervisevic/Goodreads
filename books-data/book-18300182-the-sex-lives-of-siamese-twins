        $('bookCover_46939').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_46939').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
