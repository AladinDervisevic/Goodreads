<div id="review_2511186065" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2511186065" />
    <a title="Caz (littlebookowl)" class="left imgcol" href="/user/show/5365999-caz-littlebookowl"><img alt="Caz (littlebookowl)" src="https://images.gr-assets.com/users/1561362660p2/5365999.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2511186065?book_show_action=true">Sep 05, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Caz (littlebookowl)" class="user" itemprop="url" name="Caz (littlebookowl)" href="/user/show/5365999-caz-littlebookowl">Caz (littlebookowl)</a>
