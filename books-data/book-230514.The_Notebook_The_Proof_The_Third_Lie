      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_842'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/230514.The_Notebook_The_Proof_The_Third_Lie?rating=\">all <span class=\"greyText\">(35741)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/230514.The_Notebook_The_Proof_The_Third_Lie?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;0aJCcd77EA2APjUKfrXkXuIlun3xUHqtYdx5XTrlNu6sfGedi62HLhhISn1lu7B9jywMR7DtrKtQLJnvYmHGmA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(8550)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/230514.The_Notebook_The_Proof_The_Third_Lie?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;A+KNDgh3x9gtHZDy8hT1PTgyGI8dO3lP0K0T457FP6t+PKjiXSFQ+7Vr74XpGqEeVTuutVyGr0nhXfNRxkHP3Q==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4777)<\/span><\/a>\n                