      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_1838917').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1838917').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_1838917').observe('prototip:hidden', function () {
