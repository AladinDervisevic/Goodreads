<div id="review_5977201" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/5977201" />
    <a title="Leftbanker" class="left imgcol" href="/user/show/352711-leftbanker"><img alt="Leftbanker" src="https://images.gr-assets.com/users/1530584670p2/352711.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/5977201?book_show_action=true">Sep 10, 2007</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Leftbanker" class="user" itemprop="url" name="Leftbanker" href="/user/show/352711-leftbanker">Leftbanker</a>
