<div id="review_1138965092" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1138965092" />
    <a title="Fadeela" class="left imgcol" href="/user/show/30199393-fadeela"><img alt="Fadeela" src="https://images.gr-assets.com/users/1426687579p2/30199393.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1138965092?book_show_action=true">Jan 03, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Fadeela" class="user" itemprop="url" name="Fadeela" href="/user/show/30199393-fadeela">Fadeela</a>
