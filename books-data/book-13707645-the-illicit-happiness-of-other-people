<div id="review_1328191255" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1328191255" />
    <a title="Ashish Iyer" class="left imgcol" href="/user/show/38414168-ashish-iyer"><img alt="Ashish Iyer" src="https://images.gr-assets.com/users/1616066821p2/38414168.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1328191255?book_show_action=true">Jul 07, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ashish Iyer" class="user" itemprop="url" name="Ashish Iyer" href="/user/show/38414168-ashish-iyer">Ashish Iyer</a>
