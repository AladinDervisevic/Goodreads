<div id="review_3307878016" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3307878016" />
    <a title="Arie" class="left imgcol" href="/user/show/6762949-arie"><img alt="Arie" src="https://images.gr-assets.com/users/1642049043p2/6762949.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3307878016?book_show_action=true">Jun 17, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Arie" class="user" itemprop="url" name="Arie" href="/user/show/6762949-arie">Arie</a>
