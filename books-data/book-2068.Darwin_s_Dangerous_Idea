      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_187" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_187'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/2068.Darwin_s_Dangerous_Idea?rating=\">all <span class=\"greyText\">(44054)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/2068.Darwin_s_Dangerous_Idea?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;1KaejCQE+SInOAT+ahCxbUxguZ5M7O03rthdaq7EaiwiaosqJRBkuq/TCQ0lzwYtwOiJnUYFDCiGzcjcZ1MnYw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(6581)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/2068.Darwin_s_Dangerous_Idea?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;qo5pjwXdEFJzDiR4EqxnuOurPKLYUjxTyL8mbhjvSUBcQnwpBMmNyvvlKYtdc9D4ZyMModK73UzgqrPY0XgEDw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4905)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n