            Shelves:
              <a class="actionLinkLite" href="/review/list/3975257-maryam?shelf=ebooks">ebooks</a>, 
              <a class="actionLinkLite" href="/review/list/3975257-maryam?shelf=book-tour">book-tour</a>, 
              <a class="actionLinkLite" href="/review/list/3975257-maryam?shelf=received-for-review">received-for-review</a>, 
