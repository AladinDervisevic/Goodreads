        $('bookCover_8239301').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_8239301').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
