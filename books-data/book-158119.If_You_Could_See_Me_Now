        $('bookCover_58017916').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_58017916').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
