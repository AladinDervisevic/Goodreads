        $('bookCover_1239609').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1239609').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
