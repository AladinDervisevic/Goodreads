      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_551'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/444388.The_Uses_of_Enchantment?rating=\">all <span class=\"greyText\">(18952)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/444388.The_Uses_of_Enchantment?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;kVPjWPb1wniMCgjkgBo0bS0qIBUzulH8dPjIVByOTQtBTKg/pePSMAmeiZQbg5Dwd1ztQoZiuEEnuDBO9plEHw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(1541)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/444388.The_Uses_of_Enchantment?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;pA6ZgRKWESooCLv1BLvfv7Id1TZsRSM0OJeCbekxrep0EdLmQYABYq2cOoWfInsi6GsYYdmdyolr13p3Ayak/g==&#39;)}); return false;\">4 stars <span class=\"greyText\">(1950)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/s