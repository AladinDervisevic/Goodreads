        $('bookCover_512413').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_512413').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
