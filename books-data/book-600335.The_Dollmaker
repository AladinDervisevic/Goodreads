      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_256279').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_256279').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_256279').observe('prototip:hidden', function () {
