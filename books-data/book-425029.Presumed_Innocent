<div id="review_2054649287" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2054649287" />
    <a title="Pye" class="left imgcol" href="/user/show/37734417-pye"><img alt="Pye" src="https://images.gr-assets.com/users/1471720604p2/37734417.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2054649287?book_show_action=true">Jul 11, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Pye" class="user" itemprop="url" name="Pye" href="/user/show/37734417-pye">Pye</a>
