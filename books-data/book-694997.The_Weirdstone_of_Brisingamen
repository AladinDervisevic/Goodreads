        $('bookCover_226163').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_226163').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
