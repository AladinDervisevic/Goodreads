  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1753368829?book_show_action=true">Sep 18, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Katie" class="user" itemprop="url" name="Katie" href="/user/show/44178547-katie">Katie</a>
