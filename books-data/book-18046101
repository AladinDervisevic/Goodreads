<div id="review_527310838" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/527310838" />
    <a title="Aliaa Ali" class="left imgcol" href="/user/show/8312930-aliaa-ali"><img alt="Aliaa Ali" src="https://images.gr-assets.com/users/1361120599p2/8312930.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/527310838?book_show_action=true">Feb 05, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Aliaa Ali" class="user" itemprop="url" name="Aliaa Ali" href="/user/show/8312930-aliaa-ali">Aliaa Ali</a>
