<div id="review_2367776717" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2367776717" />
    <a title="Smelly McGrouchpants" class="left imgcol" href="/user/show/8770975-smelly-mcgrouchpants"><img alt="Smelly McGrouchpants" src="https://images.gr-assets.com/users/1398116863p2/8770975.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2367776717?book_show_action=true">Apr 23, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Smelly McGrouchpants" class="user" itemprop="url" name="Smelly McGrouchpants" href="/user/show/8770975-smelly-mcgrouchpants">Smelly McGrouchpants</a>
