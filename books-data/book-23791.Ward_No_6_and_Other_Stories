<div id="review_2229605105" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2229605105" />
    <a title="Imi" class="left imgcol" href="/user/show/3126915-imi"><img alt="Imi" src="https://images.gr-assets.com/users/1457797201p2/3126915.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2229605105?book_show_action=true">Feb 04, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Imi" class="user" itemprop="url" name="Imi" href="/user/show/3126915-imi">Imi</a>
