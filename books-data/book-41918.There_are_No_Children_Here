<div id="review_3271469430" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3271469430" />
    <a title="Amari" class="left imgcol" href="/user/show/365226-amari"><img alt="Amari" src="https://images.gr-assets.com/users/1189359568p2/365226.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3271469430?book_show_action=true">Jun 14, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Amari" class="user" itemprop="url" name="Amari" href="/user/show/365226-amari">Amari</a>
