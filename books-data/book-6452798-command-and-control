<div id="review_2018904162" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2018904162" />
    <a title="Lauren " class="left imgcol" href="/user/show/1291915-lauren"><img alt="Lauren " src="https://images.gr-assets.com/users/1643729278p2/1291915.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2018904162?book_show_action=true">Jun 03, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Lauren " class="user" itemprop="url" name="Lauren " href="/user/show/1291915-lauren">Lauren </a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1291915-lauren?shelf=audiobooks">audiobooks</a>, 
              <a class="actionLinkLite" href="/review/list/1291915-lauren?shelf=us-history">us-history</a>, 
              <a class="actionLinkLite" href="/review/list/1291915-lauren?shelf=long-reads">long-reads</a>, 
              <a class="actionLinkLite" href="/review/list/1291915-lauren?shelf=cloud-library">cloud-library</a>, 
              <a class="actionLinkLite" href="/review/list/1291915-lauren?shelf=technology">technology</a>
          </div>
