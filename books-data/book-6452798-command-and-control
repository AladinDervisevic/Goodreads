<div id="review_587494080" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/587494080" />
    <a title="Andy" class="left imgcol" href="/user/show/891229-andy"><img alt="Andy" src="https://images.gr-assets.com/users/1360810475p2/891229.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/587494080?book_show_action=true">Apr 11, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Andy" class="user" itemprop="url" name="Andy" href="/user/show/891229-andy">Andy</a>
