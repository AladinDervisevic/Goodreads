      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_29150814').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_29150814').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_29150814').observe('prototip:hidden', function () {
