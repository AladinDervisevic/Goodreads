<div id="review_2202832318" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2202832318" />
    <a title="Arko" class="left imgcol" href="/user/show/27131192-arko"><img alt="Arko" src="https://images.gr-assets.com/users/1393758134p2/27131192.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2202832318?book_show_action=true">Dec 22, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Arko" class="user" itemprop="url" name="Arko" href="/user/show/27131192-arko">Arko</a>
