<div id="review_115073908" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/115073908" />
    <a title="Alyssa" class="left imgcol" href="/user/show/2753251-alyssa"><img alt="Alyssa" src="https://images.gr-assets.com/users/1369004887p2/2753251.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/115073908?book_show_action=true">Aug 03, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Alyssa" class="user" itemprop="url" name="Alyssa" href="/user/show/2753251-alyssa">Alyssa</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=own">own</a>, 
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=ya-loved">ya-loved</a>, 
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=great-books">great-books</a>, 
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=highly-anticipated">highly-anticipated</a>, 
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=mystery-suspense">mystery-suspense</a>, 
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=ya-romance">ya-romance</a>, 
              <a class="actionLinkLite" href="/review/list/2753251-alyssa?shelf=really-excited-for">really-excited-for</a>, 
