      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_82" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_82'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/8255917-washington?rating=\">all <span class=\"greyText\">(208597)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/8255917-washington?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;ooEsdkTTgZM0NfzMQzNp5JtghsLR5d4baSv/cL+6p2FeeYN3TQLgKYj4+JI41tIiCjglGZTko2devGIdx8WFhw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(30233)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/8255917-washington?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;5VZ2ljn+Y2A73mKRrrKZ5N8xBwiPjc+lqdMIX9b56R0ZrtmXMC8C2ocTZs/VVyIiTmmk08qMstmeRJUyrobL+w==&#39;)}); return false;\">4 stars <span class=\"greyText\">(19828)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span clas