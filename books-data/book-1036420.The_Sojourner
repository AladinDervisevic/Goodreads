      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_229117').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_229117').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_229117').observe('prototip:hidden', function () {
