        $('bookCover_85391').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_85391').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
