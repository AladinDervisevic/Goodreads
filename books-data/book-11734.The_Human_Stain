<div id="review_109974476" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/109974476" />
    <a title="Bettie" class="left imgcol" href="/user/show/1108123-bettie"><img alt="Bettie" src="https://images.gr-assets.com/users/1628585304p2/1108123.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/109974476?book_show_action=true">Jul 04, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Bettie" class="user" itemprop="url" name="Bettie" href="/user/show/1108123-bettie">Bettie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=paper-read">paper-read</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=autumn-2016">autumn-2016</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=re-visit-2016">re-visit-2016</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=series">series</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=society">society</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=north-americas">north-americas</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=racism">racism</a>, 
              <a class="actionLinkLite" href="/review/list/1108123-bettie?shelf=us-new-england">us-new-england</a>, 
