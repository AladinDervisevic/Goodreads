        $('bookCover_59735219').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_59735219').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
