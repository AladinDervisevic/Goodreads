        $('bookCover_36244689').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_36244689').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
