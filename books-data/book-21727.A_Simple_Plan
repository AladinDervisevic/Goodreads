      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_58352801').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_58352801').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_58352801').observe('prototip:hidden', function () {
