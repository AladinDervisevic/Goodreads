<div id="review_2330105371" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2330105371" />
    <a title="Chrissie" class="left imgcol" href="/user/show/632247-chrissie"><img alt="Chrissie" src="https://images.gr-assets.com/users/1321799585p2/632247.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2330105371?book_show_action=true">Jun 13, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Chrissie" class="user" itemprop="url" name="Chrissie" href="/user/show/632247-chrissie">Chrissie</a>
