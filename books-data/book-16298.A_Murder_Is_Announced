        $('bookCover_834378').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_834378').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
