        $('bookCover_31300').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_31300').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
