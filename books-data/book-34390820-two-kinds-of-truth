<div id="review_2099597990" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2099597990" />
    <a title="Susanne" class="left imgcol" href="/user/show/4514828-susanne"><img alt="Susanne" src="https://images.gr-assets.com/users/1641228439p2/4514828.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2099597990?book_show_action=true">Dec 02, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Susanne" class="user" itemprop="url" name="Susanne" href="/user/show/4514828-susanne">Susanne</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/4514828-susanne?shelf=favorite-authors">favorite-authors</a>, 
              <a class="actionLinkLite" href="/review/list/4514828-susanne?shelf=must-read">must-read</a>, 
              <a class="actionLinkLite" href="/review/list/4514828-susanne?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/4514828-susanne?shelf=2017-five-star-books">2017-five-star-books</a>
          </div>
