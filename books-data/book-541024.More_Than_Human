        $('bookCover_145354').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_145354').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
