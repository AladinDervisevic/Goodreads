      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_57007657').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_57007657').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_57007657').observe('prototip:hidden', function () {
