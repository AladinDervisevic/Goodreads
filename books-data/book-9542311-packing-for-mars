        $('bookCover_311504').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_311504').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
