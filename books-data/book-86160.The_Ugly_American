      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Eli" class="user" itemprop="url" name="Eli" href="/user/show/32909004-eli">Eli</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/32909004-eli?shelf=for-class">for-class</a>, 
              <a class="actionLinkLite" href="/review/list/32909004-eli?shelf=2017">2017</a>, 
              <a class="actionLinkLite" href="/review/list/32909004-eli?shelf=classics">classics</a>, 
              <a class="actionLinkLite" href="/review/list/32909004-eli?shelf=science-political">science-political</a>, 
              <a class="actionLinkLite" href="/review/list/32909004-eli?shelf=history">history</a>, 
