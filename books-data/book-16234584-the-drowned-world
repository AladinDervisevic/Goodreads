      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_884'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/16234584-the-drowned-world?rating=\">all <span class=\"greyText\">(48338)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/16234584-the-drowned-world?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;kvJrzuiZFV7Y7A5Ypk1bUhTgjXCcyo2hXB0yfTCpBsEnpplSUv6N4y/15LbMwUmVBJY8urxg++lYooXc/Ko9zA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(4211)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/16234584-the-drowned-world?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;efcn8ODmq3xq46ajNJvrQe0E+qXHL4Z5+6WUaCLK6W/Mo9VsWoEzwZ36TE1eF/mG/XJLb+eF8DH/GiPJ7snSYg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(6508)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n      