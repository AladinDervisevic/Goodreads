        $('bookCover_80660').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_80660').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
