        $('bookCover_13358236').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_13358236').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
