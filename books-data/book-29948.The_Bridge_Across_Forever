        $('bookCover_40380563').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_40380563').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
