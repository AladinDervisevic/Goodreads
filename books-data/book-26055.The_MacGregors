      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_490609').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_490609').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_490609').observe('prototip:hidden', function () {
