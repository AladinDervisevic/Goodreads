        $('bookCover_7402948').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_7402948').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_7402948').observe('prototip:hidden', function () {
