          $$('div.prototip').each(function (e) {
            if ($('bookCover_450864').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_450864').observe('prototip:hidden', function () {
