      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_935'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/25817531-what-she-knew?rating=\">all <span class=\"greyText\">(173264)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/25817531-what-she-knew?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;7mV4JhYOtPqygDUMP8aCOhP1HbWnuaCvipsMehriYOiItcR8q8LzfXiDtmyHVHh8GYUx9Bsww/qNl2pAw1cKTA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(19320)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/25817531-what-she-knew?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;ZAwg1WxNwgPXNTp+4xToBmRYgY1ZY+0A2OvzDfHwm6gC3JyP0YGFhB02uR5bhhJAbiitzOXqjlXf55U3KEXxDA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(35794)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n               