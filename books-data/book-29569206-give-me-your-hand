<div id="review_2247394998" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2247394998" />
    <a title="Tammie" class="left imgcol" href="/user/show/5707041-tammie"><img alt="Tammie" src="https://images.gr-assets.com/users/1586635693p2/5707041.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2247394998?book_show_action=true">Aug 08, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Tammie" class="user" itemprop="url" name="Tammie" href="/user/show/5707041-tammie">Tammie</a>
