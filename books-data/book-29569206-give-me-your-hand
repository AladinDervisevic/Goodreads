        $('bookCover_34840184').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_34840184').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
