<div id="review_27634915" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/27634915" />
    <a title="Jen" class="left imgcol" href="/user/show/845267-jen"><img alt="Jen" src="https://images.gr-assets.com/users/1243477432p2/845267.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/27634915?book_show_action=true">Jul 18, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Jen" class="user" itemprop="url" name="Jen" href="/user/show/845267-jen">Jen</a>
