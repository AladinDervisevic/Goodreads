        $('bookCover_58424652').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_58424652').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
