        $('edition_11236251').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_11236251').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
