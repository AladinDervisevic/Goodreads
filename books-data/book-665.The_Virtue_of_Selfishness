<div id="review_24602915" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/24602915" />
    <a title="Mary.dooms" class="left imgcol" href="/user/show/792561-mary-dooms"><img alt="Mary.dooms" src="https://s.gr-assets.com/assets/nophoto/user/u_50x66-632230dc9882b4352d753eedf9396530.png" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/24602915?book_show_action=true">Jun 16, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Mary.dooms" class="user" itemprop="url" name="Mary.dooms" href="/user/show/792561-mary-dooms">Mary.dooms</a>
