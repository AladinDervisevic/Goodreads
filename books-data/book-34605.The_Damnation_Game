    <div class="js-dataTooltip" data-use-wtr-tooltip='true'>
        <div class="js-tooltipTrigger tooltipTrigger" data-resource-type='Book' data-resource-id='52635' data-placement='bottom-left'>
          <a href="/book/show/52635.The_Hellbound_Heart"><img id="more_book_52635" alt="The Hellbound Heart" title="The Hellbound Heart" width="50" src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1327312426l/52635._SY160_.jpg" /></a>
