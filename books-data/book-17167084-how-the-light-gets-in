      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_17447507').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_17447507').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_17447507').observe('prototip:hidden', function () {
