<div id="review_2677563626" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2677563626" />
    <a title="Brittany McCann" class="left imgcol" href="/user/show/30535238-brittany-mccann"><img alt="Brittany McCann" src="https://images.gr-assets.com/users/1638825976p2/30535238.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2677563626?book_show_action=true">Jan 28, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Brittany McCann" class="user" itemprop="url" name="Brittany McCann" href="/user/show/30535238-brittany-mccann">Brittany McCann</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/30535238-brittany-mccann?shelf=fiction">fiction</a>, 
              <a class="actionLinkLite" href="/review/list/30535238-brittany-mccann?shelf=action">action</a>, 
              <a class="actionLinkLite" href="/review/list/30535238-brittany-mccann?shelf=contemporary">contemporary</a>, 
              <a class="actionLinkLite" href="/review/list/30535238-brittany-mccann?shelf=mystery">mystery</a>, 
              <a class="actionLinkLite" href="/review/list/30535238-brittany-mccann?shelf=reviews">reviews</a>, 
