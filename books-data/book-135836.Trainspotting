        $('bookCover_28676').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_28676').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
