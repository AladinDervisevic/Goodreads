      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_842'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/228250.Four_Arguments_for_the_Elimination_of_Television?rating=\">all <span class=\"greyText\">(5012)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/228250.Four_Arguments_for_the_Elimination_of_Television?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;IhxkBzh4anKiwk92ymmtFRY4h9lPxQibIPcwbo3ybnlWvQrUwleVdRG+ZWy7fEHr0Lxye366X2tVDRgQ4wGD7Q==&#39;)}); return false;\">5 stars <span class=\"greyText\">(569)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/228250.Four_Arguments_for_the_Elimination_of_Television?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;F8l4hcf/xBTBO8QB5fxLcTedp9hCTcire1q5fNTyB/BjaBZWPdA7E3JH7huU6aeP8RlSenMyn1sOoJECugHqZA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(491)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/228250.Four_Arguments_for_the_Elimination_of_Television?rating=3&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;KPJfpw61Qy/3y6pFT9G3mKb6dHNTmp+CMX7g49J4hDJcUzF09Jq8KES3gF8+xFtmYH6B0WLlyHJEhMidvItppg==&#39;)}); return false;\">3 stars <span class=\"greyText\">(208)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/228250.Four_Arguments_for_the_Elimination_of_Television?rating=2&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;9E3pouWhzLlNDXyOrbt39OtbK7vCerV4xkCUtolm1EqA7IdxH44zvv5xVpTcrpsKLd/eGfMF4oizurzI55U53g==&#39;)}); return false;\">2 stars <span class=\"greyText\">(60)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remo