        $('bookCover_8707741').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_8707741').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
