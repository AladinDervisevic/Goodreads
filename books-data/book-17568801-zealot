      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_479" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_479'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/17568801-zealot?rating=\">all <span class=\"greyText\">(163056)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/17568801-zealot?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;AX45xstp0ck+oBxXEdOBgwf/A/vWeiJNao06DRyMbL6uur9toa6Wgk/VzAPF5f0aKzf0Zv4TCAevKgimXQHyrQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(21069)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/17568801-zealot?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;C8g49pnr/voB4POChIgYQy1eLxicYHoQ31/k/IkLRvmkDL5d8yy5sXCVI9ZQvmTaAZbYhbQJUFoa+NZXyIbY6g==&#39;)}); return false;\">4 stars <span class=\"greyText\">(24481)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"load