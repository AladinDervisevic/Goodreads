        $('bookCover_18966806').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_18966806').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
