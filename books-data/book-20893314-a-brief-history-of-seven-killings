      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_131'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/20893314-a-brief-history-of-seven-killings?rating=\">all <span class=\"greyText\">(119089)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/20893314-a-brief-history-of-seven-killings?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;aFjN66gxRMIuZLJdfX1jy5yd1KBr3wcWe5TOUsGr05xVrL8gT4T8r6znOIvcL2VubSp/u1JZJdJqUjKer3TuIA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(10488)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/20893314-a-brief-history-of-seven-killings?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;gbkHC3tfJJu2OABTAoxJWli2zUIxKKunYQmsTzengHq8TXXAnOqc9jS7ioWj3k//qQFmWQiuiWNwz1CDWXi9xg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(11050)<\/span><\/a>\n                