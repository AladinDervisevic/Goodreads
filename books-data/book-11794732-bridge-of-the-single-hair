<div id="review_384636424" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/384636424" />
    <a title="Natalie" class="left imgcol" href="/user/show/5332067-natalie"><img alt="Natalie" src="https://images.gr-assets.com/users/1363133339p2/5332067.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/384636424?book_show_action=true">Aug 05, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Natalie" class="user" itemprop="url" name="Natalie" href="/user/show/5332067-natalie">Natalie</a>
