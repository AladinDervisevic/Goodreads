      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_73'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/55302.Intellectuals?rating=\">all <span class=\"greyText\">(7454)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/55302.Intellectuals?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;PFSZPUlfFy0y46FobD+d6ux4rJkm1sMGZEyUpg7AFY6tz9JNYmu71wF9pzyBbcgRVIp5hdiBlrGDySY/uyC7Xw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(657)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/55302.Intellectuals?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;+DNp9zAoc4cDk06ia7X3CujqhmFUG/o6R0MuKh5y0UJpqCKHGxzffTANSPaG56LxUBhTfapMr42gxpyzq5J/kw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(766)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\