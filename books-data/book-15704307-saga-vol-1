      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_34963526').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_34963526').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_34963526').observe('prototip:hidden', function () {
