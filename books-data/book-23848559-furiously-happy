        $('bookCover_59340308').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_59340308').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
