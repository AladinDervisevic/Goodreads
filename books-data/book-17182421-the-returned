<div id="review_667412856" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/667412856" />
    <a title="Navessa" class="left imgcol" href="/user/show/18104163-navessa"><img alt="Navessa" src="https://images.gr-assets.com/users/1615118423p2/18104163.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/667412856?book_show_action=true">Jul 14, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Navessa" class="user" itemprop="url" name="Navessa" href="/user/show/18104163-navessa">Navessa</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/18104163-navessa?shelf=dnf">dnf</a>, 
              <a class="actionLinkLite" href="/review/list/18104163-navessa?shelf=dystopian">dystopian</a>, 
              <a class="actionLinkLite" href="/review/list/18104163-navessa?shelf=arc">arc</a>
          </div>
