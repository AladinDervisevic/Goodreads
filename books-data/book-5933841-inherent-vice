      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_358'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/5933841-inherent-vice?rating=\">all <span class=\"greyText\">(64098)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/5933841-inherent-vice?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;7dkFEVA7EurKQPPxWsniSDm6KxxukoKNc6l/pN7UZUNNntavCH1vPqxUJ+5OaaLTCOps3JidYH0Rh+DP5t5FWA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(7453)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/5933841-inherent-vice?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;4t46biSvjoQ62ogi6jtYWVoa9IbBqZ1hv5KVt80GfY1CmenQfOnzUFzOXD3+mxjCa0qzRjemf5HdvArc9Qxdlg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(13022)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <s