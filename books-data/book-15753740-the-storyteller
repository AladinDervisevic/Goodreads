            if ($('edition_16055529').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_16055529').observe('prototip:hidden', function () {
