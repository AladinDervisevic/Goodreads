        $('bookCover_126512').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_126512').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
