      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_792'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/17136.The_Time_Machine_The_Invisible_Man?rating=\">all <span class=\"greyText\">(77956)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/17136.The_Time_Machine_The_Invisible_Man?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;fzUljHngszUPrvMy3+cKTSI5nBRxuXxr72XD6NAeMvdRw6DJuLPowiQptc6f+ijOmsuk4V+Dg2RTohqhc63TZg==&#39;)}); return false;\">5 stars <span class=\"greyText\">(21502)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/17136.The_Time_Machine_The_Invisible_Man?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;ZZytdJ0IkoEEbWOVekx2IV2YRgm4C1g+s7f7pc4W+CtLaigxXFvJdi/qJWk6UVSi5Wp+/JYxpzEPcCLsbaUZug==&#39;)}); return false;\">4 stars <span class=\"greyText\">(20543)<\/span><\/a>\n                  <span