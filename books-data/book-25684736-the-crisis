<div id="review_2416393240" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2416393240" />
    <a title="Rick" class="left imgcol" href="/user/show/3067828-rick"><img alt="Rick" src="https://images.gr-assets.com/users/1568436162p2/3067828.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2416393240?book_show_action=true">Jun 07, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rick" class="user" itemprop="url" name="Rick" rel="nofollow" href="/user/show/3067828-rick">Rick</a>
