      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_893'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/25684736-the-crisis?rating=\">all <span class=\"greyText\">(6731)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/25684736-the-crisis?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;SLxF0GCUs4PDZuundLGYdOduMh33/NaR5guJZbU649mvG2xui4njYmIWsMG+ZHBzSepj5BI5qU3gkwJgtUpZcA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(224)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/25684736-the-crisis?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;nSEGG3k5TEKbTnDEvy2uwSYO0Z+mx88DhIydsP2K8PZ6hi+lkiQcozo+K6J1+EbGiIqAZkMCsN+CFBa1/fpKXw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(222)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=