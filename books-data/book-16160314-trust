<div id="review_531022365" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/531022365" />
    <a title="Viviana" class="left imgcol" href="/user/show/10361366-viviana"><img alt="Viviana" src="https://images.gr-assets.com/users/1360081379p2/10361366.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/531022365?book_show_action=true">Feb 09, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Viviana" class="user" itemprop="url" name="Viviana" href="/user/show/10361366-viviana">Viviana</a>
