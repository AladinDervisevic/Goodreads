  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/650370117?book_show_action=true">Jun 24, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Penelope" class="user" itemprop="url" name="Penelope" href="/user/show/21491391-penelope">Penelope</a>
