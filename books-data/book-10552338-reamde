        $('bookCover_8488830').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_8488830').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
