        $('bookCover_52207317').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_52207317').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
