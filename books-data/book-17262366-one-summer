<div id="review_694036621" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/694036621" />
    <a title="Jaylia3" class="left imgcol" href="/user/show/1794273-jaylia3"><img alt="Jaylia3" src="https://images.gr-assets.com/users/1594391810p2/1794273.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/694036621?book_show_action=true">Aug 13, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Jaylia3" class="user" itemprop="url" name="Jaylia3" href="/user/show/1794273-jaylia3">Jaylia3</a>
