        $('bookCover_578508').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_578508').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
