<div id="review_2687489710" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2687489710" />
    <a title="Pegboard" class="left imgcol" href="/user/show/47722544-pegboard"><img alt="Pegboard" src="https://images.gr-assets.com/users/1498516338p2/47722544.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2687489710?book_show_action=true">Jan 28, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Pegboard" class="user" itemprop="url" name="Pegboard" href="/user/show/47722544-pegboard">Pegboard</a>
