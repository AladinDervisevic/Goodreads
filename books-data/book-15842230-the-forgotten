        $('bookCover_51053653').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_51053653').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_51053653').observe('prototip:hidden', function () {
