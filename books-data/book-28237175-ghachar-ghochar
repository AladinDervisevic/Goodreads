      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_817'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/28237175-ghachar-ghochar?rating=\">all <span class=\"greyText\">(26671)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/28237175-ghachar-ghochar?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;WTxILD1HRAGXPJ+zi2at1bfRMpqLawAFfiXDac30ZKuUC/7+o9aFuQswnBCf4pBwfMpizXdV5vI8AA4UyhizJQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(3079)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/28237175-ghachar-ghochar?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;lkxNQ46LXFIC/pJeP+4hMFoprCNZIR2kvx+aqOtmRL5be/uREBqd6p7ykf0rahyVkTL8dKUf+1P9OlfV7IqTMA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(5886)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n            