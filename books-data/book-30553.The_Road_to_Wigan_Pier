      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_369" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_369'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/30553.The_Road_to_Wigan_Pier?rating=\">all <span class=\"greyText\">(49386)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30553.The_Road_to_Wigan_Pier?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;qCKQYLf0HN2AhZMeQ0TQFEDFzxfF5i3DkFw86bUjSJYTmPl2uPaYUfCRSLMK5vXREPkydv7Z3EXSuO3cKzocCw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(5263)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30553.The_Road_to_Wigan_Pier?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;dEMDEvtIxeV9i7xztjsfonSiR5Djay3VeVpwBa+RhLXP+WoE9EpBaQ2fZ97/mTpnJJ668dhU3FM7vqEwMYjQKA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(8287)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n