        $('bookCover_149789').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_149789').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
