        $('bookCover_45169121').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_45169121').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
