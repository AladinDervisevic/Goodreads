      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_864008').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_864008').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_864008').observe('prototip:hidden', function () {
