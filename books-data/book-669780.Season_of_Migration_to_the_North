      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_22447885').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_22447885').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_22447885').observe('prototip:hidden', function () {
