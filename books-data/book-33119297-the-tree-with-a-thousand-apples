<div id="review_1976868848" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1976868848" />
    <a title="Pooja" class="left imgcol" href="/user/show/30059190-pooja"><img alt="Pooja" src="https://images.gr-assets.com/users/1644298212p2/30059190.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1976868848?book_show_action=true">Apr 20, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Pooja" class="user" itemprop="url" name="Pooja" href="/user/show/30059190-pooja">Pooja</a>
