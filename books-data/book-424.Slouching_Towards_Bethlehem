          $$('div.prototip').each(function (e) {
            if ($('bookCover_1587010').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_1587010').observe('prototip:hidden', function () {
