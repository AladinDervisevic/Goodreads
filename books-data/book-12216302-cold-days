<div id="review_321739513" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/321739513" />
    <a title="David Monroe" class="left imgcol" href="/user/show/1223383-david-monroe"><img alt="David Monroe" src="https://images.gr-assets.com/users/1575986894p2/1223383.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/321739513?book_show_action=true">Apr 30, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="David Monroe" class="user" itemprop="url" name="David Monroe" href="/user/show/1223383-david-monroe">David Monroe</a>
