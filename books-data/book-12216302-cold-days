<div id="review_380856664" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/380856664" />
    <a title="Rob" class="left imgcol" href="/user/show/10743961-rob"><img alt="Rob" src="https://images.gr-assets.com/users/1422270416p2/10743961.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/380856664?book_show_action=true">Jul 31, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rob" class="user" itemprop="url" name="Rob" href="/user/show/10743961-rob">Rob</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=fantasy">fantasy</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=author-male">author-male</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=urban-fantasy">urban-fantasy</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=audio-book">audio-book</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=read-2013">read-2013</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=own">own</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=dresden-files">dresden-files</a>, 
