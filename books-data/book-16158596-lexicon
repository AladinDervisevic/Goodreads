<div id="review_1573512313" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1573512313" />
    <a title="rin" class="left imgcol" href="/user/show/23238315-rin"><img alt="rin" src="https://images.gr-assets.com/users/1615062770p2/23238315.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1573512313?book_show_action=true">Mar 08, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="rin" class="user" itemprop="url" name="rin" href="/user/show/23238315-rin">rin</a>
