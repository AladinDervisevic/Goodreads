        $('bookCover_61549').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_61549').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_61549').observe('prototip:hidden', function () {
