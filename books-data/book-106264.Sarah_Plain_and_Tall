        $('bookCover_207153').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_207153').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
