      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_801'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/33290408-god-bless-you-mr-rosewater?rating=\">all <span class=\"greyText\">(105968)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/33290408-god-bless-you-mr-rosewater?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;tJrNStwhKd01Q5a9dlNcgxloe3nIkGc3fApeff9y0dB43MQU8xxCxYDjN9bkZlX/RP+0RjWnOOvULK2/AciT8g==&#39;)}); return false;\">5 stars <span class=\"greyText\">(18470)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/33290408-god-bless-you-mr-rosewater?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;aQ52JU80AParu/CC70sNKCiC+MqxnrJexIVO7q63OmqlSH97YAlr7h4bUel9fgRUdRU39Uyp7YJso70sUA14SA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(26017)<\/span><\/a>\n                  <span class=\"loadi