<div id="review_3564077245" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3564077245" />
    <a title="Karen.J." class="left imgcol" href="/user/show/4448531-karen-j"><img alt="Karen.J." src="https://images.gr-assets.com/users/1589062854p2/4448531.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3564077245?book_show_action=true">Sep 28, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Karen.J." class="user" itemprop="url" name="Karen.J." href="/user/show/4448531-karen-j">Karen.J.</a>
