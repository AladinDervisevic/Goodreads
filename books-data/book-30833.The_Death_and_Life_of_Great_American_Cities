<div id="review_44223452" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/44223452" />
    <a title="Matt" class="left imgcol" href="/user/show/84043-matt"><img alt="Matt" src="https://images.gr-assets.com/users/1233626154p2/84043.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/44223452?book_show_action=true">Jan 24, 2009</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Matt" class="user" itemprop="url" name="Matt" href="/user/show/84043-matt">Matt</a>
