      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_426'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/30833.The_Death_and_Life_of_Great_American_Cities?rating=\">all <span class=\"greyText\">(57811)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30833.The_Death_and_Life_of_Great_American_Cities?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;em4XFO/y6xnsxbtXDKupmr1DUc6iGvE3hr22nWweF0u7RV03kFRfaZI4W/WbTnmcOHSHmUJ6IkAP/kvf9Dna9Q==&#39;)}); return false;\">5 stars <span class=\"greyText\">(7008)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30833.The_Death_and_Life_of_Great_American_Cities?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;Ffgp5qI5M92SSe2tAqbid8fh176uqHGvaME124egPDjU02PF3Z+Hrey0DQ+VQzJxQtYB6U7IotjhgsiZH4fxhg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(5124)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30833.The_Death_and_Life_of_Great_American_Cities?rating=3&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;+KMHEguTrRAyS3eIM7uRuU7efj9I65SMIBqO1Sy6QG05iE0xdDUZYEy2lyqkXkG/y+moaKiLR/upWXOXtJ2N0w==&#39;)}); return false;\">3 stars <span class=\"greyText\">(1773)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30833.The_Death_and_Life_of_Great_American_Cities?rating=2&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;eXcJz76BaUY1ahqth6MoF9n3zwzRx4Hayw2IID4gODq4XEPswSfdNkuX+g8QRvgRXMAZWzGnUq1CTnVipgf1hA==&#39;)}); return false;\">2 stars <span class=\"greyText\">(324)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" on