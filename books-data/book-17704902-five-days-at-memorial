<div id="review_704854049" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/704854049" />
    <a title="Wendy" class="left imgcol" href="/user/show/1418580-wendy"><img alt="Wendy" src="https://images.gr-assets.com/users/1231118403p2/1418580.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/704854049?book_show_action=true">Aug 27, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Wendy" class="user" itemprop="url" name="Wendy" href="/user/show/1418580-wendy">Wendy</a>
