      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_94'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/11612989-the-dictator-s-handbook?rating=\">all <span class=\"greyText\">(32680)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/11612989-the-dictator-s-handbook?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;4Bp1ihakjPQZgK6QaEDkHui8yDBdnicPpC9Rpp+4h1x01PjLK0tGaP/VcYRuEMW3EHKdT+8vcVF8KtQuBO5bqQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(3990)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/11612989-the-dictator-s-handbook?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;C1lTa1s/LjjO0VnNc898WpegC0tToIF9yf1g3k2aWBKfl94qZtDkpCiEhtl1n13zb25eNOER1yMR+OVW1syE5w==&#39;)}); return false;\">4 stars <span class=\"greyText\">(3018)<\/span><\/a>\n                  <span class=\"loadingAnimation\"