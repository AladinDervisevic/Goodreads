        $('bookCover_25912358').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_25912358').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
