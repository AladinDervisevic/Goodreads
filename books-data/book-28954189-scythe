        $('bookCover_51001828').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_51001828').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
