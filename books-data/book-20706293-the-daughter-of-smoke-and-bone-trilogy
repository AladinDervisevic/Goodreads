      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_17929102').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_17929102').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_17929102').observe('prototip:hidden', function () {
