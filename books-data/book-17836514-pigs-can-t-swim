<div id="review_728172490" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/728172490" />
    <a title="Amanda" class="left imgcol" href="/user/show/3582465-amanda"><img alt="Amanda" src="https://images.gr-assets.com/users/1612392215p2/3582465.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/728172490?book_show_action=true">Sep 25, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Amanda" class="user" itemprop="url" name="Amanda" href="/user/show/3582465-amanda">Amanda</a>
