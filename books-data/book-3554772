<div id="review_1664915610" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1664915610" />
    <a title="Calzean" class="left imgcol" href="/user/show/26416859-calzean"><img alt="Calzean" src="https://images.gr-assets.com/users/1469230411p2/26416859.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1664915610?book_show_action=true">Mar 08, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Calzean" class="user" itemprop="url" name="Calzean" href="/user/show/26416859-calzean">Calzean</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9781848874299" href="/book/show/17594094-azazeel">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=author-egypt">author-egypt</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=culture-egypt">culture-egypt</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=culture-turkey">culture-turkey</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=religious-literature">religious-literature</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=historical-fiction">historical-fiction</a>
          </div>
