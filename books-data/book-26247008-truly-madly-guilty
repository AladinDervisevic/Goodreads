        $('bookCover_425124').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_425124').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
