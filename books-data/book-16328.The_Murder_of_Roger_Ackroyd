<div id="review_1922821429" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1922821429" />
    <a title="Adrian" class="left imgcol" href="/user/show/22809267-adrian"><img alt="Adrian" src="https://images.gr-assets.com/users/1484242635p2/22809267.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1922821429?book_show_action=true">Mar 09, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Adrian" class="user" itemprop="url" name="Adrian" href="/user/show/22809267-adrian">Adrian</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/22809267-adrian?shelf=det-agatha-christie">det-agatha-christie</a>, 
              <a class="actionLinkLite" href="/review/list/22809267-adrian?shelf=buddy-read">buddy-read</a>, 
              <a class="actionLinkLite" href="/review/list/22809267-adrian?shelf=detectives-mystery-general">detectives-mystery-general</a>, 
              <a class="actionLinkLite" href="/review/list/22809267-adrian?shelf=detectives-challenge-hp-2018-20">detectives-challenge-hp-2018-20</a>, 
