        $('bookCover_77197').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_77197').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
