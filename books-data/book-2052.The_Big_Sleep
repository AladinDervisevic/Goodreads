      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_22034').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_22034').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_22034').observe('prototip:hidden', function () {
