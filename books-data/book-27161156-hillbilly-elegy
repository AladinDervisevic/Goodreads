  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1731275630?book_show_action=true">Aug 17, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Howard" class="user" itemprop="url" name="Howard" href="/user/show/32041201-howard">Howard</a>
