<div id="review_505020133" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/505020133" />
    <a title="Vanessa" class="left imgcol" href="/user/show/4636758-vanessa"><img alt="Vanessa" src="https://images.gr-assets.com/users/1596200358p2/4636758.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/505020133?book_show_action=true">Jan 13, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
