        $('bookCover_77239').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_77239').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_77239').observe('prototip:hidden', function () {
