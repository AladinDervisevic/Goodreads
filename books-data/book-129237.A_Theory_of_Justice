      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_294" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_294'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/129237.A_Theory_of_Justice?rating=\">all <span class=\"greyText\">(39139)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/129237.A_Theory_of_Justice?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;C+quwS0cTwf7kpu66zfAeC50geaciAiHUhze5mWNEGiNdL+jExs0VzbDBHzP+mzfhrDM9nZ/g+S0E6snvxiArg==&#39;)}); return false;\">5 stars <span class=\"greyText\">(4197)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/129237.A_Theory_of_Justice?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;donhn3b4ckMKk4zGsJ+ludn3fOfBsLsHQh5qEXu06s3wF/D9SP8JE8fCEwCUUgkecTMx9ytHMGSkER/QoSF6Cw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4067)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n      