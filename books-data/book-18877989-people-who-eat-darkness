      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_819" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_819'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/18877989-people-who-eat-darkness?rating=\">all <span class=\"greyText\">(50865)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/18877989-people-who-eat-darkness?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;zG26cvunsybSEAwissW7ZKh/xnpxweUblbmpPkJt5S90wLvhAx18YZCzB39A21ACLMMT0WbxZgPsQJ7zwOxfVQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(5035)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/18877989-people-who-eat-darkness?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;RfstXrNFOf0Wivb/GoSVTdTB+GWuQFn2+4tvqG1C82P9VizNS//2ulQp/aLomn4rUH0tzrlw2u6Cclhl78NJGQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(8576)<\/span><\/a>\n                  <span class=\"loadingAnimation\