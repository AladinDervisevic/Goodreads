      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_751'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/29938032-her-every-fear?rating=\">all <span class=\"greyText\">(63913)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/29938032-her-every-fear?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;24IvAfP548ApQXdYMgEdz03GBjC1k4EiRV/Aou68PW1itrb3wOF4k2PGcSpk4n4Xa4k15NT9n/6XRBHOHGBllA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(5555)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/29938032-her-every-fear?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;AM+axK75qU6uych9hNMtG6L9972cw4zpmQPdNkvvezq5+wMyneEyHeROzg/SME7DhLLEaf2tkjVLGAxauTMjww==&#39;)}); return false;\">4 stars <span class=\"greyText\">(12169)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n              