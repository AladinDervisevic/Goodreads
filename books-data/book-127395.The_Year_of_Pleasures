          $$('div.prototip').each(function (e) {
            if ($('edition_871298').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_871298').observe('prototip:hidden', function () {
