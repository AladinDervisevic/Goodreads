        $('bookCover_59493518').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_59493518').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
