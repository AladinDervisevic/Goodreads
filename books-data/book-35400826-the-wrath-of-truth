        $('bookCover_33260689').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_33260689').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
