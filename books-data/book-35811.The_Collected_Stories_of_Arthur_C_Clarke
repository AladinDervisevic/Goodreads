      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_54520247').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_54520247').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_54520247').observe('prototip:hidden', function () {
