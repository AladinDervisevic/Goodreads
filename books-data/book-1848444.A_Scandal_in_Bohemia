        $('bookCover_2395757').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_2395757').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
