//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_596'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/1846.Wild_at_Heart?rating=\">all <span class=\"greyText\">(123022)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/1846.Wild_at_Heart?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;wCY+vZmQTiYTTHBwwEYgHTxhXEwTzAqyz+abf/UHjvk9ctfnyCD/u9ng9PnsLE11dXvPBINKP1aYWu1HHPO81g==&#39;)}); return false;\">5 stars <span class=\"greyText\">(29626)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/1846.Wild_at_Heart?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;7hnsWlRuTCqdwjP4Wmu8z5Zt/IscykuVGN7j7z0Jo/8TTQUABd79t1dut3F2AdGn33dvw4xMfnFPYpXX1P2R0A==&#39;)}); return false;\">4 stars <span class=\"greyText\">(21854)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span cla