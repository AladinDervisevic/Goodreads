  <div class="friendReviews elementListBrown" >
    <div class="section">
      

<div id="review_1820696566" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1820696566" />
    <a title="Terry Pearce" class="left imgcol" href="/user/show/7693283-terry-pearce"><img alt="Terry Pearce" src="https://images.gr-assets.com/users/1328871944p2/7693283.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1820696566?book_show_action=true">Jun 19, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Terry Pearce" class="user" itemprop="url" name="Terry Pearce" href="/user/show/7693283-terry-pearce">Terry Pearce</a>
