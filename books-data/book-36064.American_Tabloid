        $('bookCover_288965').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_288965').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
