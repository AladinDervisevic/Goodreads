        $('bookCover_7724609').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_7724609').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_7724609').observe('prototip:hidden', function () {
