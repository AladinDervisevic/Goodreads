        $('bookCover_38324884').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_38324884').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
