      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_6989576').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6989576').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_6989576').observe('prototip:hidden', function () {
