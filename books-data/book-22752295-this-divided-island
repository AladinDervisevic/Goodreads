      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_587'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/22752295-this-divided-island?rating=\">all <span class=\"greyText\">(4165)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/22752295-this-divided-island?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;OeUnj9xNxMTSTfa9Nk1x36IiBJmDNAT557314kTOIZV1GATWF2+esZs07qX+uOZBm5hOQx7KS4rqJRKHqdfArQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(608)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/22752295-this-divided-island?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;h2qgbQ3BJep+TDRVh7wUI+8ZeKpvZxbGjDcnVTFUBw/Ll4M0xuN/nzc1LE1PSYO91qMycPKZWbWBr8Aw3E3mNw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(463)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n   