<div id="review_752954684" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/752954684" />
    <a title="Cara" class="left imgcol" href="/user/show/4901122-cara"><img alt="Cara" src="https://images.gr-assets.com/users/1296529353p2/4901122.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/752954684?book_show_action=true">Oct 30, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Cara" class="user" itemprop="url" name="Cara" href="/user/show/4901122-cara">Cara</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was ok"><span size="15x15" class="staticStar p10">it was ok</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

