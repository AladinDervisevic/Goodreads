<div id="review_1170136772" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1170136772" />
    <a title="Ellie" class="left imgcol" href="/user/show/2908629-ellie"><img alt="Ellie" src="https://images.gr-assets.com/users/1399799985p2/2908629.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1170136772?book_show_action=true">Jan 16, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ellie" class="user" itemprop="url" name="Ellie" href="/user/show/2908629-ellie">Ellie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=race">race</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=poetry">poetry</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=2015gpchallenge">2015gpchallenge</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=art-artists">art-artists</a>, 
