        $('bookCover_5308').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_5308').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_5308').observe('prototip:hidden', function () {
