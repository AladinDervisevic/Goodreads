        $('bookCover_34696176').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_34696176').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_34696176').observe('prototip:hidden', function () {
