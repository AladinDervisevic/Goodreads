<div id="review_1284051873" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1284051873" />
    <a title="Nishtha" class="left imgcol" href="/user/show/17878332-nishtha"><img alt="Nishtha" src="https://images.gr-assets.com/users/1609952723p2/17878332.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1284051873?book_show_action=true">May 19, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Nishtha" class="user" itemprop="url" name="Nishtha" href="/user/show/17878332-nishtha">Nishtha</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/17878332-nishtha?shelf=own">own</a>, 
              <a class="actionLinkLite" href="/review/list/17878332-nishtha?shelf=four-stars">four-stars</a>, 
              <a class="actionLinkLite" href="/review/list/17878332-nishtha?shelf=author-giveaway">author-giveaway</a>, 
              <a class="actionLinkLite" href="/review/list/17878332-nishtha?shelf=indian-author">indian-author</a>
          </div>
