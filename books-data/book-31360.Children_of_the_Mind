        $('bookCover_58746987').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_58746987').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
