          $$('div.prototip').each(function (e) {
            if ($('edition_18211691').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_18211691').observe('prototip:hidden', function () {
