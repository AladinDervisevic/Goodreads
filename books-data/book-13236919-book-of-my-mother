<div id="review_3482029563" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3482029563" />
    <a title="Lydia" class="left imgcol" href="/user/show/16133065-lydia"><img alt="Lydia" src="https://images.gr-assets.com/users/1601915589p2/16133065.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3482029563?book_show_action=true">Aug 06, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Lydia" class="user" itemprop="url" name="Lydia" href="/user/show/16133065-lydia">Lydia</a>
      </span>

