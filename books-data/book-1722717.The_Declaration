<div id="review_1845661242" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1845661242" />
    <a title="Katie" class="left imgcol" href="/user/show/39212525-katie"><img alt="Katie" src="https://images.gr-assets.com/users/1564618946p2/39212525.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1845661242?book_show_action=true">Dec 23, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Katie" class="user" itemprop="url" name="Katie" href="/user/show/39212525-katie">Katie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9781408836880" href="/book/show/16149500-the-declaration">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/39212525-katie?shelf=favourites">favourites</a>, 
              <a class="actionLinkLite" href="/review/list/39212525-katie?shelf=2016-books-read">2016-books-read</a>, 
              <a class="actionLinkLite" href="/review/list/39212525-katie?shelf=books-on-my-bookcases">books-on-my-bookcases</a>, 
