              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=family">family</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=contemporary">contemporary</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=favourites">favourites</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=fiction">fiction</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=young-adult">young-adult</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=romance">romance</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=tear-jerker">tear-jerker</a>, 
              <a class="actionLinkLite" href="/review/list/46782473-natasha?shelf=realistic-fiction">realistic-fiction</a>, 
