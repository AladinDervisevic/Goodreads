<div id="review_1236161884" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1236161884" />
    <a title="Emma" class="left imgcol" href="/user/show/28602001-emma"><img alt="Emma" src="https://images.gr-assets.com/users/1438967931p2/28602001.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1236161884?book_show_action=true">Mar 24, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Emma" class="user" itemprop="url" name="Emma" href="/user/show/28602001-emma">Emma</a>
