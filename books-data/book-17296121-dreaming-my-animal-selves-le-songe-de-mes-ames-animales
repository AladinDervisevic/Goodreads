      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_605929').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_605929').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_605929').observe('prototip:hidden', function () {
