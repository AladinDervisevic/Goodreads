      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_600'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/13151505-the-watch?rating=\">all <span class=\"greyText\">(4976)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/13151505-the-watch?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;c8P7r+vlJAQioeo9tMcdAjleDEBBrn/kZIEgTXFfd/GZWe2q1bHECIwVmYgoRPt4YRKLpjtUw1mm2q+f4nz0fA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(282)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/13151505-the-watch?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;RhE3H4rGBNQkxpI600AZkUOgWsl94GOA38VG1okQwVGsiyEatJLk2Ipy4Y9Pw//rG+zdLwca3z0dnskEGjNC3A==&#39;)}); return false;\">4 stars <span class=\"greyText\">(448)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"l