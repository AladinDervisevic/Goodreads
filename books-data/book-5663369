<div id="review_1944095069" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1944095069" />
    <a title="Qahtan Aljazrawi" class="left imgcol" href="/user/show/53668101-qahtan-aljazrawi"><img alt="Qahtan Aljazrawi" src="https://images.gr-assets.com/users/1507517898p2/53668101.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1944095069?book_show_action=true">Mar 17, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Qahtan Aljazrawi" class="user" itemprop="url" name="Qahtan Aljazrawi" href="/user/show/53668101-qahtan-aljazrawi">Qahtan Aljazrawi</a>
